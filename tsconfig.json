{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "outDir": "out",
        "lib": ["ES2022"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,  // Add this to skip type checking of declaration files
        "types": [] // Add this to prevent automatic type inclusion
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
    ],
    "include": [
        "src/**/*.ts"
    ]
}
